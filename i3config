#set font
set $mod Mod4
font pango:monospace 11.4

#i3 startup and lock
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id xsecurelock-transfer-sleep-lock --xsecurelock--nofork

#close windows
set $refresh_i3status killall -SIGUSR1 i3status

#keyboards
exec --no-startup-id setxkbmap us
bindsym $mod+Shift+space exec setxkbmap -layout us
bindsym $mod+Shift+n exec setxkbmap -layout no
bindsym $mod+Shift+b exec setxkbmap -layout bg phonetic

# Increase brightness by 10%
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl s +10%
# Decrease brightness by 10%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl s 10%-

#volume controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-sta11rtup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status
floating_modifier $mod

#change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

#alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

#move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

#alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

#enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

#workspace names 
set $workspace1 1:terminal
set $workspace2 2:editor
set $workspace3 3:browser
set $workspace4 4:files
set $workspace8 8:qbit
set $workspace9 9:keepAss

# switch to workspace
bindsym $mod+1 workspace 1:terminal
bindsym $mod+2 workspace 2:editor
bindsym $mod+3 workspace 3:browser
bindsym $mod+4 workspace 4:files
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8:qbit
bindsym $mod+9 workspace 9:keepAss
#bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number 1:terminal
bindsym $mod+Shift+2 move container to workspace number 2:editor
bindsym $mod+Shift+3 move container to workspace number 3:browser
bindsym $mod+Shift+4 move container to workspace number 4:files
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8:qbit
bindsym $mod+Shift+9 move container to workspace number 9:keepAss
#bindsym $mod+Shift+0 move container to workspace number 10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+Delete exec xsecurelock 

#status bar, colors and position
bar {
        status_command i3status
        position bottom 
    colors { 

        background #000000
        statusline #ffffff
        separator #666666

        focused_workspace  #000000 #000000 #ffffff
        active_workspace   #ffffff #000000 #ffffff
        inactive_workspace #000000 #000000 #888888
        urgent_workspace   #000000 #000000 #888888
        binding_mode       #000000 #000000 #ff0000
       } 
}

#window border config, colors, etc.
# class                 border  backgr. text    indicator child_border
client.focused          #999999 #999999 #ffffff #999999   #999999   
client.focused_inactive #ffffff #5f676a #ffffff #484e50   #333333
client.unfocused        #ffffff #444444 #888888 #292d2e   #222222
client.placeholder      #999999 #999999 #999999 #999999   #999999
client.background       #ffffff

#volume control for system tray
exec --no-startup-id volumeicon $refresh_i3status

#window resize
mode "resize" {
        # Pressing down will grow the windowâ€™s height.
        bindsym h resize shrink width 1 px or 1 ppt
        bindsym j resize grow height 1 px or 1 ppt
        bindsym k resize shrink height 1 px or 1 ppt
        bindsym l resize grow width 1 px or 1 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 1 px or 1 ppt
        bindsym Down resize grow height 1 px or 1 ppt
        bindsym Up resize shrink height 1 px or 1 ppt
        bindsym Right resize grow width 1 px or 1 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

#enter resize mode
bindsym $mod+r mode "resize"

#set the window borders type and size
default_border pixel 2

#application rules, programs forced to use a certain workspace according to window class, use xprop to find the class.
assign [class=LibreWolf] $workspace3
assign [class=VSCodium] $workspace2
assign [class=Pcmanfm] $workspace4
assign [class=qBittorrent] $workspace8
assign [class=KeePassXC] $workspace9

#border options for different windows
for_window [class=kitty] border none
for_window [class=LibreWolf] border none
for_window [class=VSCodium] border none
for_window [class=firefox-esr] border none


#dmenu launcher 
bindsym $mod+d exec --no-startup-id dmenu_run

#terminal launcher
bindsym $mod+Return exec kitty

#screenshot launcher
bindsym $mod+Shift+S exec flameshot launcher

#launch on startup
exec librewolf
exec kitty 
exec xbanish
exec codium
exec pcmanfm
exec xinput disable 'Synaptics TM3075-002' 

#kill process
bindsym $mod+Shift+q kill

#used software: -------------------------------------------
#flameshot - screenshot tool
#pcmanfm - file manager
#file-roller - compatible archiver with pcmanfm
#vscodium - FOSS fork of VSCode 
#librewolf - privacy fork of firefox
#vim - the OG Text editor
#git  
#libreoffice - FOSS alternative of Microsoft Office
#dmenu - application launcher for i3-wm
#xbanish  - hides the cursor on key press
#xprop - find info on any window
#bluetuith - terminal bluetooth client
#pulsemixer- terminal audio mixer
#keepassxc - password manager
#feh - wallpaper set feg --bg-scale <locationOfJpg>
#xdg-user-dirs - configure user dirs, run xdg-user-dirs-update
#nodejs - JavaScript runtime environment
#ufw - firewall
#nmcli - terminal network manager
